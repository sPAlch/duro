@import '../../mixin'

.product-category
  &__title
    font-size 100px
    line-height 1.2
    text-transform uppercase
    color $light_grey
    
  &__content
    $display-flex(row, center, flex-start)
    
  &__main
    flex 1 0 0
  
  &__menu-item
    width 320px
    padding 24px 40px
    font-size $font_button
    cursor pointer
    
    &--active
      color $orange
      background-color $light_grey
  
  &__cover-types
    $display-flex(row, center, stretch)
    
  &__cover
    min-height 320px
    position relative
    $display-flex()
    flex 1 0 0
  
  &__cover-loading-icon
    position absolute
    top calc( 50% - 20px )
    left calc( 50% - 20px )
  
  &__cover-img
    width 100%
    
    &--loading
      opacity 0.5
  
  &__types
    width 320px
    padding 0 0 0 80px
    background-color $dark
    color white
    position relative
    $display-flex(column, flex-start, stretch)

    &:before
      content ''
      display block
      background-color $dark
      width 100%
      height 80px
      position absolute
      top -80px
      left 0
  
  &__type-link
    font-size $font_button_s
    padding 8px 0
        
  &__introduction-links
    min-height 160px
    $display-flex(row, center, stretch)
    
  &__introduction
    flex 1 0 0
    padding 24px 40px
    background-color $dark
    font-size $font_paragraph
    color $dark_grey
    line-height 1.5  
  
  &__sub-title
    font-size $font_sub_title
    color white
    margin 0 0 8px
    
  &__links
    width 320px
    $display-flex(column, center, flex-start)
    
  &__cat-link
    display block
    width 80px
    height 80px
    background-color $orange
    $display-flex()
    
    &:before
      content ''
      display block
      width 40px
      height 40px
      background-image url('./img_goto_white.svg')
    
  &__pdf-link
    display block
    width 240px
    height 80px
    background-color $dark_grey
    font-size $font_button_s
    align-self flex-end
    $display-flex()
    
    