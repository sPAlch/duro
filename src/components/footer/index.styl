@import '../../mixin'

.footer
  padding 40px 0
  width 100%
  background-color $dark
  color white
  font-size $font_paragraph
  line-height 1.75
  
  &__main
    $display-flex(row, center, flex-start)
    
  &__copyright
    text-align center
    padding 40px 0 0
    
  &__nav-wrap
    padding 0 0 0 40px    
    width 240px
    
  &__location
    padding 0 0 0 40px
    flex 1 0 0
  
  &__link
    &:visited
    &:link
      color white
      
  &__nav
    padding 0 0 48px
      
  &__nav-link
    display block
    padding 0 0 20px
  
  &__social
    $display-flex(row, flex-start)

  &__social-link
    width 0px
    height 0px
    overflow hidden
    display block
    padding 32px 32px 0 0
    background-size contain
    background-position center
    margin 0 24px 0 0
    
  &__social-link-fb
    background-image url('./img_facebook.svg')

  &__social-link-ig
    background-image url('./img_instagram.svg')

  &__social-link-yt
    background-image url('./img_youtube.svg')
