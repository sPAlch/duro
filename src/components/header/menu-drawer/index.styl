@import '../../../mixin'

.menu
  position relative

  &__toogle-btn
    width 80px
    height 80px
    background $orange
    position relative
    display flex
    justify-content center
    align-items center
    cursor pointer

    &--opened
      z-index 100
  
  &__wrap
    z-index -1000
    position fixed
    background $dark_transparent
    left 0
    top 0
    width 100vw
    height 100vh
    display flex
    justify-content flex-end
    opacity 0
    transition opacity .5s
    
    &--opened
      z-index 1
      opacity 1
      

  &__drawer
    background $dark
    min-width 320px
    padding 80px 0 0 0
    transform translate( 240px, 0)
    transition transform .3s
    $display-flex(column)
    
    &--opened
      transform translate( 0, 0)

  &__list
    width 100%
    max-height 100%
    overflow auto

  &__list-item
    padding 0 80px
    margin 25px 0
    line-height 1.2
    
  &__nav-link
  &__sub-nav-link
    padding 10px 0
    display block

    &:link
      text-decoration none

  &__nav-link:link
  &__nav-link:visited
    color white
    font-size $font_title_s
    font-weight $font_weight_bold

  &__sub-nav-link:link
  &__sub-nav-link:visited
    color $light_grey
    font-size $font_sub_title
    font-weight $font_weight_light
